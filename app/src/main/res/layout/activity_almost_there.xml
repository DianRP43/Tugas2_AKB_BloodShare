<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgif"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:paddingTop="250dp"
    tools:context=".almostThere">

    //26/04/2021, membuat tampilan almost there, 10118043, Dian Rosa Pratama, IF01
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_title"
            android:textColor="@color/white"
            android:text="Almost There"
            android:textSize="36sp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/decripte"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="Thank you for registering with us. One more step, you need to check your email to activate your account"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/decripte"
            android:layout_marginTop="80dp"
            android:background="@drawable/login_style"
            android:text="VERIFY"
            android:onClick="pindah_verify"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>