<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgif"
    android:orientation="vertical"
    tools:context=".MainActivity">

    //24/04/2021, membuat tampilan login, 10118043, Dian Rosa Pratama, IF01

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingTop="50dp"
        android:paddingRight="30dp"
        android:paddingBottom="50dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="25dp"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/blood" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:hint="Username"
                android:outlineAmbientShadowColor="@color/separator"
                android:outlineSpotShadowColor="@color/frontdesv"
                android:paddingBottom="30dp"
                android:shadowColor="@color/frontdesv"
                android:textColor="@color/frontdesv"
                android:textColorHint="@color/frontdesv"></EditText>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:backgroundTint="@color/white"
                android:hint="Password"
                android:outlineAmbientShadowColor="@color/separator"
                android:outlineSpotShadowColor="@color/frontdesv"
                android:paddingBottom="30dp"
                android:shadowColor="@color/frontdesv"

                android:textColor="@color/frontdesv"
                android:textColorHint="@color/frontdesv">

            </EditText>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/password"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_style"
                android:text="LOGIN"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="OR"
                android:textColor="@color/frontdesv" />

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/or"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_style"
                android:drawableLeft="@drawable/ic_shortcut_fb"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="CONNECT WITH FACEBOOK"
                android:textColor="@color/white">
                /></Button>


            <TextView
                android:id="@+id/have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_connect"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="20dp"
                android:text="doesn't have account ? "
                android:textColor="@color/frontdesv" />
            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_connect"
                android:layout_toRightOf="@+id/have"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Register"
                android:onClick="pindah_register"
                android:textStyle="bold"
                android:textColor="@color/frontdesv" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
